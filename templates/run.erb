#!/bin/bash
exec 2>&1
export PATH=<%= @product_dir %>/bin:$PATH
exec lumberjack.sh \
<% @fields.each_pair do |field, value| -%>
  --field <%= "#{field}=#{value}" %> \
<% end -%>
<% if @window_size -%>
  --window-size <%= @window_size %> \
<% end -%>
  --ssl-ca-path <%= @cert_path %> \
  --host <%= @host %> \
  --port <%= @port %> \
<% @files.each do |filename| -%>
  <%= filename %> \
<% end %>

